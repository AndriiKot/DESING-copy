doctype html
html(lang="en")
    head 
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../style.css")
        title 
    body 
            - let container_values = 'Text Animation'.split('')
            - let n = 1;
            while n < 5
                div(class = 'container container_number_' + n )
                    each val in container_values
                        div.char= val
                - n = n + 1;

    




