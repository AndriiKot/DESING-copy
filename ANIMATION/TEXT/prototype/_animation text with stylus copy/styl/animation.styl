animation(arg = 1)
    sum = 0
    for i in (1..arg)
        sum += 0.05
        :hover div:nth-child({i})
            transition-delay: sum s

nnn(arg = 1)
    l = 0
    for i in (1..arg)
        >div:nth-child({i})
            z-index i
            position absolute
            left (l ) px
            top 0px
        l += 30
        >div:nth-child(even)
            top 10px
            opacity: 0.7;
            
